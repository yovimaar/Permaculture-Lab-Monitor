<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="edu.oswego.permaculturemonitor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="Permaculture Lab"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TempActivity" />
        <activity android:name=".SoilActivity" />
        <activity android:name=".PhActivity" />
        <activity android:name=".HumidityActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".MyPreferencesActivity"/>

    </application>

</manifest>